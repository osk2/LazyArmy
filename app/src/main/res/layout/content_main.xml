<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="osk2.myapplication.ScrollingActivity"
    tools:showIn="@layout/activity_main">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/profile_thumb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="8dp"
             />

        <TextView
            android:id="@+id/title_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/profile_thumb"
            android:layout_toRightOf="@id/profile_thumb"
            android:textIsSelectable="false"
            android:textSize="26dp"
            android:ellipsize="end"
            android:textColor="@color/colorPrimaryText"/>

        <TextView
            android:id="@+id/detail_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/profile_thumb"
            android:layout_toRightOf="@id/profile_thumb"
            android:textSize="14dp"
            android:textColor="@color/colorSecondaryText"
            />

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
